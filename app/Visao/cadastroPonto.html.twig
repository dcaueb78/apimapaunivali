<div class="container ">
    <h1 class="display-4 text-center">{{titulo}}</h1>
    <hr>

    <h1 class="lead text-center">Cadastro de Ponto</h1>
    <br>
    <br>
    <form action="/criarponto" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="nome">Nome</label>
                <input class="form-control" id="nome" name="nome" placeholder="Nome" required type="text">
            </div>
            <div class="form-group col-md-6">
                <label for="tipo">Tipo</label>
                <select class="form-control" id="tipo" name="tipo" required>
                    <option selected>Escolha...</option>
                    <option>Lanchonete</option>
                    <option>Sala de Aula</option>
                    <option>Local PÃºblico</option>
                    <option>Banheiro</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="latitude">Latitude</label>
                <input class="form-control" id="latitude" max="999999999.99999" min="-99999999" name="latitude" placeholder="Latitude" required type="text">
            </div>
            <div class=" form-group col-md-6">
                <label for="longitude">Longitude</label>
                <input class="form-control" id="Longitude" max="999999999.99999" min="-99999999" name="longitude" placeholder="Longitude" required type="text">
            </div>
        </div>

        <button class="btn btn-success" type="submit">Cadastre</button>
        <a href="/linhadotempo">
            <button class="btn btn-primary">Voltar</button>
        </a>
    </form>

</div>
